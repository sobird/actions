  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug for development",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "program": "${workspaceFolder}/pkg/cmd",
      "args": ["run", "-W", "test/workflows", "-j", "test-step-output", "-v"],
      "env": {}
    },
    {
      "name": "Debug job uses",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/cmd",
      "args": ["run", "-j", "test-job-uses"],
      "env": {
        "NODE_OPTIONS": "--import=./node_modules/@sobird/ts-node/register.js"
      }
    },
    {
      "name": "Debug actions cache",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/pkg/cmd",
      "args": ["run", "-j", "build-and-publish-npm", "--reuse", "--image", "-self-hosted", "--no-bind-workdir"],
      "env": {
        "NODE_OPTIONS": "--import=./node_modules/@sobird/ts-node/register.js"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${file}",
      // "preLaunchTask": "tsc:build - tsconfig.json",
      "env": {
        "NODE_OPTIONS": "--import=./node_modules/@sobird/ts-node/register.js"
      },
      "autoAttachChildProcesses": true
    },
  ]
}